{
    "type": "module",
    "scripts": {
        "compile:stylus": "stylus *.styl -o . --include-css --hoist-atrules -c",
        "compile:stylus:watch": "stylus *.styl -o . --include-css --hoist-atrules -c -w",
        "format": "bun format:prettier && bun format:stylus",
        "format:prettier": "prettier --write .",
        "format:stylus": "stylus-supremacy format \"**/*.styl\" -p \"./.vscode/settings.json\" -r",
        "postinstall": "bun compile:stylus && bun format:prettier",
        "lint": "bun lint:stylus && bun lint:editorconfig",
        "lint:editorconfig": "editorconfig-checker",
        "lint:stylus": "stylelint **/*.styl --custom-syntax stylelint-stylus/custom-syntax",
        "lint:stylus:fix": "stylelint **/*.styl --custom-syntax stylelint-stylus/custom-syntax --fix",
        "test": "bun test"
    },
    "devDependencies": {
        "@types/bun": "^1.2.18",
        "autoprefixer": "^10.4.21",
        "editorconfig-checker": "^6.0.1",
        "postcss": "^8.5.6",
        "postcss-safe-important": "^2.0.1",
        "postcss-styl": "^0.12.3",
        "poststylus": "^1.0.1",
        "prettier": "^3.6.2",
        "prettier-plugin-curly": "^0.3.2",
        "prettier-plugin-jsdoc": "^1.3.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-packagejson": "^2.5.18",
        "prettier-plugin-sh": "^0.18.0",
        "prettier-plugin-sort-json": "^4.1.1",
        "stylelint": "^16.21.1",
        "stylelint-config-standard": "^38.0.0",
        "stylelint-stylus": "^1.0.0",
        "stylus": "^0.64.0",
        "stylus-supremacy": "^4.0.0"
    }
}
